cd ../src

#Pull out the configuration variables
MASTER=$(python -c 'from mirage.preferences import GlobalPreferences; print(GlobalPreferences["spark_configuration"]["master"])')
DRIVER_MEMORY=$(python -c 'from mirage.preferences import GlobalPreferences; print(GlobalPreferences["spark_configuration"]["driver-memory"])')
EXECUTOR_MEMORY=$(python -c 'from mirage.preferences import GlobalPreferences; print(GlobalPreferences["spark_configuration"]["executor-memory"])')
EXTRA_ARGS=$(python -c 'from mirage.preferences import GlobalPreferences; print(GlobalPreferences["spark_configuration"]["command-line-args"])')
JAR_LOC='../spark_impl/target/scala-2.11/lensing_simulator_spark_kernel-assembly-0.1.0-SNAPSHOT.jar'

#export PYTHONSTARTUP='shell.py'

#The command itself
spark-submit --master $MASTER --executor-memory $EXECUTOR_MEMORY --driver-memory $DRIVER_MEMORY --jars $JAR_LOC --conf spark.driver.maxResultSize=8g --conf spark.scheduler.mode=FAIR --verbose Main.py --run $1 $2

